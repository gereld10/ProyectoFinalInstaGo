<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupActivity">

    <include
        android:id="@+id/toolbar_setup"
        layout="@layout/toolbar_principal"></include>
    <ScrollView
        android:id="@+id/mi_scroll_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_setup">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <EditText
        android:id="@+id/nombre_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textos"
        android:padding="10dp"
        android:hint="Ingrese su nombre"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <EditText
        android:id="@+id/ciudad_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textos"
        android:layout_below="@+id/nombre_setup"
        android:padding="10dp"
        android:hint="Ingrese su ciudad"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <EditText
        android:id="@+id/estado_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textos"
        android:layout_below="@+id/ciudad_setup"
        android:padding="10dp"
        android:hint="Ingrese un Estado"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/edad_setup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/estado_setup"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/textos"
                android:hint="Ingrese su edad"
                android:inputType="number"
                android:padding="10dp" />

            <EditText
                android:id="@+id/genero_setup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edad_setup"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/textos"
                android:hint="Ingrese su genero"
                android:padding="10dp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagen_setup"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/genero_setup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/welcome"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp" />

            <Button
                android:id="@+id/boton_setup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagen_setup"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="#1b5a8f"
                android:padding="10dp"
                android:text="GUARDAR INFORMACION"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>